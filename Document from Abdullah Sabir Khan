	<script>
		function formatCNIC(input) {
			const value = input.value.replace(/\D+/g, '');			if (value.length === 13) {
				const formattedValue = value.substring(0, 5) + '-' + value.substring(5, 12) + '-' + value.substring(12);
				input.value = formattedValue;
			}
		}
	</script>
